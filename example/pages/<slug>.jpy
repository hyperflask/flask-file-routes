---
from app import POSTS
match = [p for p in POSTS if p["slug"]==page.slug]
if not match:
    abort(404)
page.article = match[0]
---
{% extends "layout.html" %}

{% block body %}
  <article>
    <h1>{{article["title"]}}</h1>
    <div>{{article["content"]}}</div>
  </article>
  <a href="/">back to posts</a>
{% endblock %}